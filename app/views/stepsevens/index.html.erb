<div id="searchcontent">
<h2 id="searchtitle">Survey Ordered</h2>
<%= form_tag stepsevens_path, :method => 'get' do%>
    <%= hidden_field_tag :direction, params[:direction]%>
    <%= hidden_field_tag :sort, params[:sort]%>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>
<table class="search">
  <tr>
    <th><span><%= sortable "customer_id", "Customer #"%>&nbsp;</span></th>
    <th><span><%= sortable "customer_lname", "Last" %>, <%= sortable "customer_fname", "First" %>&nbsp;</span></th>
    <th><span><%= sortable "title", "Step Status" %>&nbsp;</span></th>
    <th><span><%= sortable "updated_at", "Updated at" %>&nbsp;</span></th>
    <th>Modify</th>
    <th>Remove Step</th>
  </tr>
<tbody>
<% @stepsevens.each do |stepseven| %>
  <tr>
    <td><%= stepseven.customer_id %></td>
    <td><%= stepseven.customer_lname.capitalize %>, <%= stepseven.customer_fname.capitalize %></td>
    <td><%= stepseven.title %></td>
    <td><%= stepseven.updated_at %></td>
    <td><%= link_to 'Edit', edit_stepseven_path(stepseven) %></td>
    <td><%= link_to 'Destroy', stepseven, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</tbody>
</table>
<%= will_paginate @stepsevens %>

<br />
</div>